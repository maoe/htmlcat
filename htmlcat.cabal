name:                htmlcat
version:             0.1.1
homepage:            https://github.com/maoe/htmlcat
license:             BSD3
license-file:        LICENSE
author:              Mitsutoshi Aoe
maintainer:          Mitsutoshi Aoe <maoe@foldr.in>
category:            System
build-type:          Simple
cabal-version:       >=1.2

flag snap
  default:           False

executable htmlcat
  main-is:           Main.hs
  other-modules:     HtmlCat.Html
  ghc-options:       -Wall -O2

  build-depends:     base >= 4.3
                   , blaze-builder >= 0.3 && < 0.4
                   , blaze-html >= 0.4 && < 0.5
                   , cmdargs >= 0.9 && < 0.10
                   , hamlet >= 0.10 && < 0.11
                   , mtl >= 2 && < 3
                   , network >= 2.3 && < 2.4
                   , process >= 1.0 && < 1.2
                   , text >= 0.11 && < 0.12
                   , attoparsec >= 0.10 && < 0.11
                   , containers >= 0.4 && < 0.5
  if flag (snap)
    other-modules:   HtmlCat.Snap
                     Snap.EventSource
    ghc-options:     -fspec-constr-count=10
    cpp-options:     -DSNAP
    build-depends:   bytestring == 0.9.*
                   , enumerator >= 0.4.18 && < 0.5
                   , snap-core == 0.7.*
                   , snap-server == 0.7.*
  else
    other-modules:   HtmlCat.Wai
    build-depends:   conduit >= 0.2 && < 0.3
                   , http-types >= 0.6 && < 0.7
                   , wai >= 1.1 && < 1.2
                   , wai-eventsource >= 1.1 && < 1.2
                   , warp >= 1.1 && < 1.2

source-repository head
  type:              git
  location:          https://github.com/maoe/htmlcat.git
